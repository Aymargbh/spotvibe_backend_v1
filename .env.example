SECRET_KEY=your_django_secret_key
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database settings
DB_NAME=spotvibe_db
DB_USER=spotvibe_user
DB_PASSWORD=spotvibe_password
DB_HOST=localhost
DB_PORT=5432

# Email settings (for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=your_email@example.com
ADMIN_EMAIL=admin@example.com

# Media & Static files
MEDIA_ROOT=/var/www/spotvibe/media
STATIC_ROOT=/var/www/spotvibe/static

# Mobile Money API Credentials (Example)
MOMO_API_KEY=your_momo_api_key
MOMO_API_SECRET=your_momo_api_secret
MOMO_CALLBACK_URL=https://yourdomain.com/api/payments/momo/callback/

# Google/Facebook OAuth (Example)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# Push Notification Settings (Example)
FCM_SERVER_KEY=your_fcm_server_key

# Sentry DSN (for error tracking, optional)
SENTRY_DSN=your_sentry_dsn

